<div class="login-form">
  <h3>
    <!-- <%= t 'page_title.users.sign_up' %> -->
    フルーツネット<br />無料Wi-Fiご利用登録
  </h3>

  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <%= @test %>
    <div class="form-inputs">
      <%= f.input :name, autofocus: true %>
      <%= f.input :email, required: true %>
      <%= f.association :gender,
                         collection: all_genders,
                         label_method: :caption,
                         value_method: :gender_code,
                         include_blank: "選択してください" %>
      <%= f.association :age_group,
                         collection: AgeGroup.all,
                         label_method: :caption,
                         value_method: :age_group_code,
                         include_blank: "選択してください" %>
      <%= f.association :address_group,
                         collection: AddressGroup.all,
                         label_method: :caption,
                         value_method: :address_group_code,
                         include_blank: "選択してください" %>
      <%= f.input :password, :required => true %>
      <%= f.input :password_confirmation, :required => true %>
      <%= link_to '個人情報保護方針', '/privacy_policy' %>
      <%= f.input :accepts_privacy_policy, as: :radio_buttons,
                                           item_wrapper_class: 'inline',
                                           selected: true %>
    </div>
    <%= button_tag(type: 'submit', class: 'btn btn-primary btn-large') do %>
      <i class='icon-ok-circle icon-white'></i> 確定する
    <% end %>
  <% end %>
  <!-- <%= render "users/shared/links" %> -->
</div>