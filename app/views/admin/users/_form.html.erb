<%= f.input :name, autofocus: true %>
<%= f.input :email, required: true %>
<%= f.association :gender,
                   collection: all_genders,
                   label_method: :caption,
                   value_method: :gender_code,
                   include_blank: "選択してください" %>
<%= f.association :age_group,
                   collection: AgeGroup.all,
                   label_method: :caption,
                   value_method: :age_group_code,
                   include_blank: "選択してください" %>
<%= f.association :address_group,
                   collection: AddressGroup.all,
                   label_method: :caption,
                   value_method: :address_group_code,
                   include_blank: "選択してください" %>
<%= f.input :password, hint: "※ パスワードの変更を行わない場合は空欄のままにしてください", required: false %>
<%= f.input :password_confirmation %>
<%= f.input :accepts_privacy_policy, as: :radio_buttons,
                                     item_wrapper_class: 'inline',
                                     selected: true %>
