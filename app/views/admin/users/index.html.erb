<%= render 'search_form' %>
<i class="icon-plus-sign"></i> <%= link_to 'Add new', :new_admin_user %>
<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th><%= User.human_attribute_name 'name' %></th>
      <th><%= User.human_attribute_name 'email' %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, [:admin, user] %></td>
        <td><%= user.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @users %>
