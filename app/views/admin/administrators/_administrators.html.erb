<div id="administrators">
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th><%= sort_link(@search, :id, User.human_attribute_name('id')) %></th>
        <th><%= sort_link(@search, :name, User.human_attribute_name('name')) %></th>
        <th><%= sort_link(@search, :email, User.human_attribute_name('email'))%></th>
      </tr>
    </thead>
    <tbody>
      <% @administrators.each do |admin| %>
        <tr>
          <td> <%= link_to admin.id, [:admin, admin] %></td>
          <td><%= link_to admin.name, [:admin, admin] %></td>
          <td><%= admin.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @administrators, remote: true %>
</div>
